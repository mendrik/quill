
GET			/                                               controllers.Home.index
GET			/login                                          controllers.Home.index
GET			/404                                            controllers.Home.index
GET			/project/:id                                    controllers.Home.project(id)

# API
GET			/projects/:id                                   controllers.Project.project(id)

POST		/projects/:id/structure                         controllers.Node.createStructureNode(id)
POST		/projects/:id/schema                            controllers.Node.createSchemaNode(id)
POST		/projects/:id/node/:nodeId                      controllers.Node.createChildNode(id, nodeId: Long)
DELETE	/projects/:id/node/:nodeId                      controllers.Node.deleteNode(id: String, nodeId: Long)
PUT	    /projects/:id/node/:nodeId                      controllers.Node.renameNode(id: String, nodeId: Long)

# AUTHENTICATION
POST		/signin							                            controllers.Security.signIn
GET     /signout						                            controllers.Security.signOut
POST		/signup							                            controllers.Security.signUp

# ACCOUNT
GET			/account						                            controllers.Security.accountInfo
PUT			/account						                            controllers.Security.requestPasswordChange
GET			/changepassword                                 controllers.Security.changePasswordPage(id: String ?= "")
PUT			/account/password		                            controllers.Security.changePassword


# Map static resources from the /public folder to the /assets URL path
GET			/assets/*file				                            controllers.Assets.versioned(path="/public", file: Asset)
GET			/out/*file				                              controllers.Assets.at(path="/public/dev/out", file: String)

# TRANSLATION
GET     /translations                                   controllers.Localization.translations()
