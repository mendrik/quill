{
  "name": "quill",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel watch:css watch",
    "watch:css": "postcss postcss/all.pcss -w -o ../target/web/public/main/styles.css",
    "watch": "tsc -w -p tsconfig.json --outFile ../target/web/public/main/quill.js",
    "build:css": "postcss postcss/all.pcss -o out/styles.css",
    "build:ts": "tsc -w -p tsconfig.json --outFile out/quill.js",
    "assemble": "ts-node build/build.ts",
    "publish": "npm-run-all build:css build:ts assemble"
  },
  "author": "Andreas Prudzilko",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "9.4.7",
    "@types/uglify-js": "2.6.30",
    "autoprefixer": "8.1.0",
    "npm-run-all": "4.1.2",
    "stylelint": "9.1.3",
    "postcss-import": "11.1.0",
    "postcss-mixins": "6.2.0",
    "postcss-for": "2.1.1",
    "postcss-nested": "3.0.0",
    "postcss-cssnext": "3.1.0",
    "postcss-calc": "6.0.1",
    "postcss-simple-vars": "4.1.0",
    "postcss-clean": "1.1.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "uglify-js": "3.3.16"
  },
  "dependencies": {
    "bulma": "0.6.2",
    "feather-ts": "1.2.61",
    "feather-components": "1.0.12"
  }
}
