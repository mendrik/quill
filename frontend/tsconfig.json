    "compileOnSave": true,
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "inlineSources": true,
        "noImplicitAny": false,
        "declaration": false,
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "moduleResolution": "node",
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es5",
        "sourceRoot": "./typescript",
        "rootDir": "./",
        "lib": ["es2015", "dom"],
        "types": [
            "node",
            "feather-ts",
            "feather-components"
        ],
